{
  "multipart": [
    { "apply": { "model": "vanillatech:block/copper_fluid_pipe" } },
    { "when": { "north": "true" }, "apply": { "model": "vanillatech:block/copper_fluid_pipe_connector", "y": 0 } },
    { "when": { "east": "true" }, "apply": { "model": "vanillatech:block/copper_fluid_pipe_connector", "y": 90 } },
    { "when": { "south": "true" }, "apply": { "model": "vanillatech:block/copper_fluid_pipe_connector", "y": 180 } },
    { "when": { "west": "true" }, "apply": { "model": "vanillatech:block/copper_fluid_pipe_connector", "y": 270 } },
    { "when": { "up": "true" }, "apply": { "model": "vanillatech:block/copper_fluid_pipe_connector", "x": -90 } },
    { "when": { "down": "true" }, "apply": { "model": "vanillatech:block/copper_fluid_pipe_connector", "x": 90 } }
  ]
}